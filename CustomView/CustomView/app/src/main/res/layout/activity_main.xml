<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.jslee.customview.CustomLoginButton
        android:id="@+id/login_apple_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:bgColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/login_google_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:symbol_icon="@drawable/ic_apple_logo"
        app:text="애플 계정으로 시작하기"
        app:textColor="@color/black" />

    <com.jslee.customview.CustomLoginButton
        android:id="@+id/login_google_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:bgColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/login_facebook_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:symbol_icon="@drawable/ic_google_logo"
        app:text="구글 계정으로 시작하기"
        app:textColor="@color/black" />

    <com.jslee.customview.CustomLoginButton
        android:id="@+id/login_facebook_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:bgColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:symbol_icon="@drawable/ic_facebook_logo"
        app:text="페이스북 계정으로 시작하기"
        app:textColor="@color/black" />


</androidx.constraintlayout.widget.ConstraintLayout>